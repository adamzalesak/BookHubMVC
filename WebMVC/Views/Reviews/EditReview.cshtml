@using WebMVC.Models.Review;
@model EditReviewViewModel

<form method="post" asp-action="EditReview" asp-controller="Reviews">
    <div class="d-flex flex-column gap-3">
        <div class="form-group">
            <label asp-for="Rating">Rating:</label>
            <input asp-for="Rating" class="form-control"/>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
    
        <div class="form-group">
            <label asp-for="Text">Text:</label>
            <input asp-for="Text" class="form-control"/>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    </div>
</form>
<form method="post" asp-action="DeleteReview" asp-controller="Reviews" asp ="">
    <input type="hidden" name="reviewId" value="@this.ViewContext.RouteData.Values["reviewid"]" />
    <button type="submit" class="btn btn-primary mt-3">Delete</button>
</form>
